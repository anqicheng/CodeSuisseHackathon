<p id="notice"><%= notice %></p>

<h1 align="center">MasterList of Companies</h1>
<br>

<div id="search-form" align="center">
<%= form_tag companies_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>
</div>

<br>
<br>

<div class="container">

  <table class="table table-hover">
    <thead>
      <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Price Return year to date</th>
      <th>Current Price</th>
      <th>Warranted price</th>
      <th>Price Earning Ratio LFY</th>
      </tr>
    </thead>
    <tbody>

      <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.name, company_path(company) %></td>
        <td><%= company.symbol %></td>
        <td><%= company.pr_year_to_date %></td>
        <td><%= company.price_current %></td>
        <td><%= company.warranted_price %></td>
        <td><%= company.per_LFY %></td>
      </tr>
    <% end %>

    </tbody>
  </table>
</div>

<span class="smtext" align="center">
<%= will_paginate @companies, previous_label:"Previous&nbsp;",next_label:"&nbsp;Next" %>
</span>
